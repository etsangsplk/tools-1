if [ -n "$SSH_ASKPASS_PASSWORD" ]; then
    cat <<< "$SSH_ASKPASS_PASSWORD"
else
    read SSH_ASKPASS_PASSWORD
    export SSH_ASKPASS=$0
    export SSH_ASKPASS_PASSWORD
    [ $DISPLAY ] || export DISPLAY=dummydisplay:0
    exec "$@"
fi
